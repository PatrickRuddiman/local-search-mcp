{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "@semantic-release/npm",
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/**/*",
            "label": "Build artifacts"
          },
          {
            "path": "package.json",
            "name": "package-v${nextRelease.version}.json",
            "label": "Package manifest (v${nextRelease.version})"
          },
          {
            "path": "release-info.json",
            "name": "release-info-v${nextRelease.version}.json",
            "label": "Release metadata with NPM links (v${nextRelease.version})"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}

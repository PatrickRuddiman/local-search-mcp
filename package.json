{
  "name": "local-search-mcp",
  "version": "2.2.0",
  "description": "MCP server for indexing, chunking, and serving local files for AI context",
  "main": "build/index.js",
  "bin": {
    "local-search-mcp": "build/index.js"
  },
  "type": "module",
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p build/generated && cp src/generated/*.msgpack build/generated/",
    "prepare": "npm run build",
    "start": "node build/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "echo \"No tests yet\" && exit 0",
    "clean": "npx rimraf ./build && npx rimraf ./node_modules",
    "generate:1-fetch": "tsx scripts/1-fetch-libraries-io.ts",
    "generate:2-cluster": "tsx scripts/2-cluster-technologies.ts",
    "generate:3-enrich": "tsx scripts/3-enrich-llm.ts",
    "generate:4-embeddings": "tsx scripts/4-generate-embeddings.ts",
    "generate:5-codegen": "tsx scripts/5-codegen-domains.ts",
    "generate:all": "npm run generate:1-fetch && npm run generate:2-cluster && npm run generate:3-enrich && npm run generate:4-embeddings && npm run generate:5-codegen",
    "generate:validate": "tsx scripts/validate-domains.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@msgpack/msgpack": "^3.1.2",
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-node": "^4.17.0",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.1",
    "langchain": "^0.2.18",
    "p-limit": "^7.1.1",
    "repomix": "^1.6.0",
    "sqlite-vec": "^0.1.7-alpha.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.6",
    "@semantic-release/npm": "^12.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.17",
    "js-yaml": "^4.1.0",
    "openai": "^6.1.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "zod": "^3.25.76"
  },
  "keywords": [
    "mcp",
    "file-indexing",
    "ai",
    "embeddings"
  ],
  "author": "",
  "license": "MIT"
}
